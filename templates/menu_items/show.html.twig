{% extends 'base.html.twig' %}

{% block title %}Menu Item{% endblock %}

{% block body %}


<main id="main-show-menu-item">

    <h1>Menu Item</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Menu Item Image</th>
                <td>
                    {% if menu_item.imageName %}


                    <img src="{{asset('upload/menu_item_img/' ~ menu_item.imageName)}}" alt="Cover Image" id="menu-item-img">


                    {% else %}
                        <p>No cover image available</p>
                    {% endif %}
                </td>
            </tr>


            <tr>
                <th>Id</th>
                <td>{{ menu_item.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ menu_item.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ menu_item.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ menu_item.price }}</td>
            </tr>
            <tr>
                <th>Stock_quantity</th>
                <td>{{ menu_item.stockQuantity }}</td>
            </tr>







            <tr>
                <th>Created_at</th>
                <td>{{ menu_item.createdAt ? menu_item.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

<nav id="show-menu-item-bottom">

    <a href="{{ path('app_menu_items_index') }}">Back to list</a>
    
    <a href="{{ path('app_menu_items_edit', {'id': menu_item.id}) }}" class="btn btn-outline-primary">edit</a>

</nav>


</main>



    <!-- {{ include('menu_items/_delete_form.html.twig') }} -->
{% endblock %}
