                    <div class="img-card"><img src="{{ asset('upload/menu_item_img/' ~ one_item.imageName) }}" alt="">
                    </div>


                    <div class="details-card">

                        <h3>{{ one_item.name }}</h3>
                        <p>{{ one_item.description }}</p>
                        <p>{{ one_item.price }} €</p>

                        <p>Stock : {{ one_item.getStockQuantity() }} </p>

                        <button class="button-add" data-item-id="{{ one_item.id }}"
                            data-stock="{{ one_item.getStockQuantity() }}">ADD</button>

                    </div>


                </div>

                {% endif %}
                {% endfor %}


            </div>
        </section>






        <section id="section-omusubi">
            <h2>OMUSUBI</h2>
            <div class="all-items">



                {% for one_item in menu_items %}
                {% if one_item.menuCategories.name == 'Omusubi' %}


                <div class="item-card">
                    <div class="img-card"><img src="{{ asset('upload/menu_item_img/' ~ one_item.imageName) }}" alt="">
                    </div>


                    <div class="details-card">

                        <h3>{{ one_item.name }}</h3>
                        <p>{{ one_item.description }}</p>
                        <p>{{ one_item.price }} €</p>

                        <p>Stock : {{ one_item.getStockQuantity() }} </p>

                        <button class="button-add" data-item-id="{{ one_item.id }}"
                            data-stock="{{ one_item.getStockQuantity() }}">ADD</button>

                    </div>


                </div>

                {% endif %}
                {% endfor %}


            </div>
        </section>





        <section id="section-sandwich">
            <h2>SANDWICH</h2>
            <div class="all-items">



                {% for one_item in menu_items %}
                {% if one_item.menuCategories.name == 'Sandwich' %}


                <div class="item-card">
                    <div class="img-card"><img src="{{ asset('upload/menu_item_img/' ~ one_item.imageName) }}" alt="">
                    </div>


                    <div class="details-card">

                        <h3>{{ one_item.name }}</h3>
                        <p>{{ one_item.description }}</p>
                        <p>{{ one_item.price }} €</p>

                        <p>Stock : {{ one_item.getStockQuantity() }} </p>

                        <button class="button-add" data-item-id="{{ one_item.id }}"
                            data-stock="{{ one_item.getStockQuantity() }}">ADD</button>

                    </div>


                </div>

                {% endif %}
                {% endfor %}


            </div>
        </section>






        <section id="section-dessert">
            <h2>DESSERT</h2>
            <div class="all-items">



                {% for one_item in menu_items %}
                {% if one_item.menuCategories.name == 'Dessert' %}


                <div class="item-card">
                    <div class="img-card"><img src="{{ asset('upload/menu_item_img/' ~ one_item.imageName) }}" alt="">
                    </div>


                    <div class="details-card">

                        <h3>{{ one_item.name }}</h3>
                        <p>{{ one_item.description }}</p>
                        <p>{{ one_item.price }} €</p>

                        <p>Stock : {{ one_item.getStockQuantity() }} </p>

                        <button class="button-add" data-item-id="{{ one_item.id }}"
                            data-stock="{{ one_item.getStockQuantity() }}">ADD</button>

                    </div>


                </div>

                {% endif %}
                {% endfor %}


            </div>
        </section>




    </main>
















    {% endblock %}

</body>