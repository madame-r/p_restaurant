{% extends 'base.html.twig' %}

{% block title %}Menu Category{% endblock %}

{% block body %}
<main id="main-show-category">

    <h1>Menu Category</h1>
    
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu_category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ menu_category.name }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ menu_category.createdAt ? menu_category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <nav id="show-category-bottom">

        <a href="{{ path('app_menu_categories_index') }}">Back to list</a>
        
        <a href="{{ path('app_menu_categories_edit', {'id': menu_category.id}) }}" class="btn btn-outline-primary">edit</a>

    </nav>
    
    


</main>


{% endblock %}
