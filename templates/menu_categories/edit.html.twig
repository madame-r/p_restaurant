{% extends 'base.html.twig' %}

{% block title %}Edit MenuCategories{% endblock %}

{% block body %}


<main id="main-edit-category">

    <h1>Edit Menu Category</h1>


    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter menu item name'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group">
        {{ form_label(form.created_at, 'Created At') }}
        {{ form_widget(form.created_at, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.created_at) }}
    </div>

    <div class="form-group text-center">
        <button type="submit" class="btn btn-outline-primary" id="button-edit-category">{{ button_label|default('Update') }}</button>
    </div>

    {{ form_end(form) }}



    <nav id="edit-category-bottom">

        <a href="{{ path('app_menu_categories_index') }}">Back to list</a>
        
        {{ include('menu_categories/_delete_form.html.twig') }}

    </nav>

    

</main>

{% endblock %}
